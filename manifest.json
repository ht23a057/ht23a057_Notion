{
  "manifest_version": 3,
  "name": "Notion Block",
  "version": "1.0",
  "description": "トップダウンメニューでNotionにブロックやテンプレートを追加",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://api.notion.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*"],
      "js": ["block/content_block.js"],
      "css": ["block/styles_block.css"]
    },
    {
      "matches": ["https://www.notion.so/marketplace*"],
      "js": ["template/content_tmp.js"],
      "css": ["template/styles_tmp.css"]
    }
  ]
}
